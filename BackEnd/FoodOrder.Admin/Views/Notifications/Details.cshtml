@model FoodOrder.Core.ViewModels.Notifications.NotificationVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Notifications detail</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Notifications detail</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a asp-action="Index">Back to list</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserID)
                </dt>
                <dd class="col-sm-10">
                    @Html.ActionLink(Model.UserID.ToString(), "Details", "User", new { id = Model.UserID })
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Message)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Message)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TimeCreated)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TimeCreated)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Type)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserReceived)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserReceived)
                </dd>
            </dl>

            <div>


                <a class="btn btn-primary" href=@Url.Action("Delete", new { id = Model.ID })>Delete</a>


                <a class="btn btn-primary" href=@Url.Action("Edit", new { id = Model.ID })>Edit</a>

            </div>
        </div>
    </div>
</div>