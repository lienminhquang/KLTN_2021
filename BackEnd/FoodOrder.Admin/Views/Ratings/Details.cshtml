@model FoodOrder.Core.ViewModels.Ratings.RatingVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Rating detail</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Rating detail</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a asp-action="Index">Back to list</a>
        </div>
        <div class="card-body">
            <dl class="row">
              
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FoodID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Star)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Star)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Comment)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TimeCreate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TimeCreate)
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink("Edit", "Edit", new { orderID = Model.OrderID,  foodID = Model.FoodID}) |
            @Html.ActionLink("Delete", "Delete", new { orderID = Model.OrderID,  foodID = Model.FoodID })
        </div>
    </div>
</div>