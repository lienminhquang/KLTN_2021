@model FoodOrder.Core.ViewModels.Carts.CartVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Delete Cart</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Delete Cart</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a asp-action="Index">Back to list</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Cart info</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.AppUserId)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.AppUserId)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.FoodID)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.FoodID)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Quantity)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Quantity)
                            </dd>
                        </dl>
                        <form asp-action="Delete">
                            <div class="form-group">
                                <label asp-for="AppUserId" class="control-label" hidden></label>
                                <input asp-for="AppUserId" class="form-control" readonly hidden />
                            </div>
                            <div class="form-group">
                                <label asp-for="FoodID" class="control-label" hidden></label>
                                <input asp-for="FoodID" class="form-control" readonly hidden />
                            </div>
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
