@model FoodOrder.Core.ViewModels.OrderDetails.OrderDetailVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">OrderDetails detail</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">OrderDetails detail</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a asp-action="Index">Back to list</a>
        </div>
        <div class="card-body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OrderID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OrderID)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FoodID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FoodID)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SaleCampaignID)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SaleCampaignID)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SalePercent)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SalePercent)
                    </dd>
                </dl>
            </div>
            <div>
                @Html.ActionLink("Edit", "Edit", new { orderID = Model.OrderID ,foodID = Model.FoodID }) |
                @Html.ActionLink("Delete", "Delete", new { orderID = Model.OrderID, foodID = Model.FoodID })
            </div>
        </div>
    </div>
</div>
