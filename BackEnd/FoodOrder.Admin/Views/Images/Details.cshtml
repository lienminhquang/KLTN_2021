@model FoodOrder.Core.ViewModels.Images.ImageVM
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Food detail</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Food detail</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a asp-action="Index">Back to list</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FoodID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoodID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImagePath)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Caption)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Caption)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsDefault)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsDefault)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SortOrder)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SortOrder)
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-3">
                    <a href="@(Configuration["BaseAddress"] + Configuration["user-content"] + "/" + Model.ImagePath)" title="@Model.ImagePath">
                        <img src="@(Configuration["BaseAddress"] + Configuration["user-content"] + "/" + Model.ImagePath)" style="width:100%" alt="@Model.ImagePath" />
                    </a>
                </dd>

            </dl>
        </div>
        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.ID })
        </div>
    </div>
</div>
